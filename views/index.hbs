


  <div class="container mt-5">
    <div class="row">
      {{#each products}}
      <div class="card col-md-3" style="width: 14rem;">
        <img
          src={{this.image}}
          class="card-img-top mh-5rem" alt="..." />
        <div class="card-body">
          <h5 class="card-title">{{this.name}}</h5>
          <p class="card-text" >{{this.description}}</p>
          <a href="#" class="btn btn-primary">Add to cart</a>
        </div>
      </div>
      {{/each}}
      
    </div>
  </div>

  </div>


